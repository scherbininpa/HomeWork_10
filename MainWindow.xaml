<Window x:Class="HomeWork_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="true" Margin="0,8,0,-8">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" 
                      HorizontalAlignment="Stretch" Grid.RowSpan="3"  VerticalAlignment="Stretch" Background="Black" Width="4">
        </GridSplitter>
        <ListView x:Name="listMessage" Background="#FFD8D7D7" Grid.RowSpan="3" />
        <StackPanel Grid.Column="2" Grid.Row="0">
            <TextBox x:Name="tbUserInfo" Grid.Column="2" TextWrapping="Wrap" Text="UserInfo" Height="50"/>

        </StackPanel>
        

    </Grid>
</Window>
